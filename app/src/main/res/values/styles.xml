<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="profileTextView">
        <item name="android:textSize">@dimen/profile_text_size</item>
        <item name="android:layout_marginTop">@dimen/profile_margin_wider</item>
    </style>

    <style name="profileTileTextView">
        <item name="android:textSize">@dimen/profile_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/profile_margin_wider</item>
    </style>

    <style name="profileButtonView">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginTop">@dimen/profile_margin_wider</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RegisterViewTitle">
        <item name="android:textSize">@dimen/register_title_text_size</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:layout_marginTop">@dimen/register_margin</item>
    </style>

    <style name="RegisterViewInput">
        <item name="android:textSize">@dimen/register_input_text_size</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:layout_marginRight">@dimen/register_margin</item>
    </style>
</resources>
