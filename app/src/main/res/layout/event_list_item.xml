<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#E6F7FF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_event_title"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="18dp"
            tools:text="Event Title" />

        <TextView
            android:id="@+id/list_item_event_info"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="5dp"
            android:textStyle="italic"
            android:textSize="16dp"
            tools:text="Event Info" />


        <ImageView
            android:id="@+id/list_item_event_photo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:outlineProvider="bounds" />
    </RelativeLayout>

    <!--
    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some info here"
        android:layout_marginTop="20dp"/>
    -->
</android.support.v7.widget.CardView>
